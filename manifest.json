{
	"manifest_version" : 2,
	"name" : "Trigger Warning",
	"description" : "Gives users a warning when there are any potentially triggering words on a webpage",
	"version" : "1.0",
	"browser_action" : {
			 "default_icon" : "icon.png",
			 "default_popup": "popup.html"
	},
	"content_scripts": [{
			   "matches": [
			   "*://*/*"
			   ],
			   "js":[
				"findtrig.js"
			   ]
	}],
	"permissions": [
        "storage"
    ]
}